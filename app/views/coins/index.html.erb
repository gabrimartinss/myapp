<table>
  <p style="color: green"><%= notice %></p>

  <h1>Coins</h1>

  <tbody>
    <% @coins.each do |coin| %>
      <tr><td><strong>Description:</strong> <%= coin.description %></td></tr>
      <tr><td><strong>Acronym:</strong> <%= coin.acronym %></td></tr>
      <tr><td><strong>Image URL:</strong> <%= image_tag coin.url_image, width: 25, height: 25 %></td></tr>
      <tr>
        <td>
          <%= link_to "Show", coin %>
          <%= link_to "Edit", edit_coin_path(coin) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br><br>

<%= link_to "New coin", new_coin_path %>
